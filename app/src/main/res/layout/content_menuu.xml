<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MenuuActivity"
    tools:showIn="@layout/activity_menuu"
   >
    <!--pojazd info -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/car"
                    android:padding="5dp"/>
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="7dp">
                <TextView
                    android:text="Marka:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Model:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Silnik:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp">
                <TextView
                    android:text="x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <View
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark" />
    <!--średnie spalanie -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/paliwo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ostatnieTankowanieTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Ostatnie tankowanie" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView10"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@+id/kosztPaliwaTV"
                        android:layout_toRightOf="@+id/kosztPaliwaTV"
                        android:text="100 l"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/srednieSpalanieTV"
                        android:layout_toEndOf="@+id/srednieSpalanieTV"
                        android:layout_toRightOf="@+id/srednieSpalanieTV"
                        android:text="6,0 l"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView12"
                        android:layout_alignStart="@+id/textView12"
                        android:layout_alignLeft="@+id/textView12"
                        android:text="6,0 l"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/kosztPaliwaTV"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@+id/kosztPaliwaTV"
                        android:layout_toRightOf="@+id/kosztPaliwaTV"
                        android:text="500 zł"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/kosztPaliwaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Koszt:" />

                    <TextView
                        android:id="@+id/iloscPaliwaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kosztPaliwaTV"
                        android:layout_alignStart="@+id/kosztPaliwaTV"
                        android:layout_alignLeft="@+id/kosztPaliwaTV"
                        android:text="Ilość:" />

                    <TextView
                        android:id="@+id/srednieSpalanieTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iloscPaliwaTV"
                        android:layout_alignStart="@+id/kosztPaliwaTV"
                        android:layout_alignLeft="@+id/kosztPaliwaTV"
                        android:text="Spalanie:"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/srednieSpalanieTV2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/srednieSpalanieTV"
                        android:layout_alignStart="@+id/kosztPaliwaTV"
                        android:layout_alignLeft="@+id/kosztPaliwaTV"
                        android:text="Średnia:"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark" />
    <!--ostatni serwis -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/serwis" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/ostatniSerwisTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ostatni serwis"
                android:padding="5dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/kosztSerwisuTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Koszt:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dataSerwisuTV" />

                <TextView
                    android:id="@+id/dataSerwisuTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kosztSerwisuTV"
                    android:layout_marginLeft="10dp"
                    android:text="Data:"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ostatniSerwisTV" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kosztSerwisuTV"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="0dp"
                    android:layout_toEndOf="@+id/kosztSerwisuTV"
                    android:text="11-12-2018"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/kosztSerwisuTV"
                    android:layout_marginStart="6dp"
                    android:layout_toEndOf="@+id/kosztSerwisuTV"
                    android:layout_toRightOf="@+id/kosztSerwisuTV"
                    android:text="500 zł"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark" />
    <!--ostatni przeglad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/przeglad" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ostatniPrzegladTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Ostatni przegląd:" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dataWaznosciPrzegladuTV"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="0dp"
                        android:layout_toEndOf="@+id/kosztPrzegladuTV"
                        android:layout_toRightOf="@+id/kosztPrzegladuTV"
                        android:text="11-12-2018"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/dataWaznosciPrzegladuTV"
                        android:layout_alignTop="@+id/kosztSerwisuTV"
                        android:layout_marginStart="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_toEndOf="@+id/kosztPrzegladuTV"
                        android:layout_toRightOf="@+id/kosztPrzegladuTV"
                        android:text="100 zł"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/kosztPrzegladuTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="7dp"
                        android:text="Koszt:" />

                    <TextView
                        android:id="@+id/dataWaznosciPrzegladuTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kosztPrzegladuTV"
                        android:layout_alignStart="@+id/kosztPrzegladuTV"
                        android:text="Data ważności:" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/aaaa"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark" />
    <!--ostatnie ubezpieczenie -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ubezpieczenie" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ostatnieUbezpieczenieTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ostatnie ubezpieczenie:"
                    android:padding="5dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dataUbezpieczeniaTV"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@+id/kosztUbezpieczeniaTV"
                        android:layout_toRightOf="@+id/kosztUbezpieczeniaTV"
                        android:text="11-12-2018"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/dataUbezpieczeniaTV"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@+id/kosztUbezpieczeniaTV"
                        android:layout_toRightOf="@+id/kosztUbezpieczeniaTV"
                        android:text="600 zł"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                            android:id="@+id/kosztUbezpieczeniaTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:text="Koszt:" />

                    <TextView
                        android:id="@+id/dataUbezpieczeniaTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kosztUbezpieczeniaTV"
                        android:layout_alignStart="@+id/kosztUbezpieczeniaTV"
                        android:layout_alignLeft="@+id/kosztUbezpieczeniaTV"
                        android:text="Data ważności:" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/aaaaa"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimaryDark" />
</LinearLayout>